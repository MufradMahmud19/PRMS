{
    "openapi": "3.0.0",
    "info": {
      "title": "Hospital API",
      "version": "1.0"
    },
    "paths": {
      "/patients/{id}": {
        "get": {
          "summary": "Get patient by ID",
          "responses": {
            "200": {
              "description": "Patient details",
              "content": {
                "application/hal+json": {
                  "example": {
                    "_links": {
                      "self": { "href": "/patients/123" },
                      "hospital:visits": { "href": "/visits?patient=123" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
}